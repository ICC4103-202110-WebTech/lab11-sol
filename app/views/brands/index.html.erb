<div class="row">
  <div class="col">
    <p id="notice"><%= notice %></p>
  </div>
</div>
<div class="row">
  <div class="col">
    <h1>Brands</h1>
  </div>
</div>
<div class="row">
  <div class="col">
    <p>Is there a brand we are missing?</p>
    <%= link_to 'New Brand', new_brand_path, class: "btn btn-primary" %>    
  </div>
</div>
<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th colspan="3" scope="col">Operations</th>
        </tr>
      </thead>
      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td ><%= brand.name %></td>
            <td><%= link_to 'Show', brand %></td>
            <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
            <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>    
  </div>
</div>
