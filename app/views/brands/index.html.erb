<div class="row">
  <div class="col">
    <p id="notice"><%= notice %></p>
  </div>
</div>
<div class="row">
  <div class="col">
    <h1>Brands</h1>
  </div>
</div>
<% if can? :new, :brand %>
<div class="row">
  <div class="col">
    <p>Is there a brand we are missing?</p>
    <%= link_to 'New Brand', new_brand_path, class: "btn btn-primary" %>    
  </div>
</div>
<% end %>
<div class="row">
  <div class="col">
    <p></p>
    <%== render partial: 'pagy/bootstrap_nav', locals: { pagy: @pagy } %>  
  </div>
</div>
<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <%if can? :manage, :brand%>
          <th colspan="3" scope="col">Operations</th>
          <%end%>
        </tr>
      </thead>
      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td><%= link_to brand.name, brand %></td>
            <%if can? :manage, :brand%>
            <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
            <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
          </tr>
        <% end %>
      </tbody>
    </table>    
  </div>
</div>
